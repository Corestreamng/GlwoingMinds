datasource db {
  provider = "mysql"
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  ADMIN
  SUPERADMIN
  EDITOR
}

// ================= USERS =================
model User {
  id       String @id @default(uuid())
  fullName String
  email    String @unique
  password String
  role     Role
}

// ================= BLOGS =================
model Blog {
  id        String   @id @default(cuid())
  category  String
  title     String
  author    String
  excerpt   String   @db.Text
  content   String   @db.LongText
  img_url   String
  slug      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


